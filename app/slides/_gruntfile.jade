        grunt.initConfig({
          task: {
            target: {
              files: [{
                expand: true,
                cwd: 'path/to/dir',
                src: '{,*/}*.ext',
                dest: '.tmp/dir',
                ext: '.new_ext'
              }]
            }
          } // many, many more tasks...
